.container
  .well.col-sm-offset-3.col-md-6
    .page-header
      %h3 Sign into gCamp
    .form-group
      -if @authentication_error
        %p.text-danger=@authentication_error

    =form_tag sign_in_path, class: "form" do |f|

      .form-group
        =label_tag :email, nil, class: 'control-label'
        =email_field_tag :email, nil, class: 'form-control'

      .form-group
        =label_tag :password, nil, class: 'control-label'
        =password_field_tag :password, nil, class: 'form-control'

      .form-group
        =submit_tag "Sign in", class: "btn btn-default"
