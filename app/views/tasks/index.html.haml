.container
  .page-header
    =  link_to "New Task", new_project_task_path(@project), class: "btn btn-info pull-right"
    %h1 Tasks for #{@project.name}


  %ol.breadcrumb
    %li
      = link_to "Projects", projects_path
    %li.active
      = link_to @project.name, project_path(@project)
    %li.active
      Tasks

  %table.table
    %thead
      %tr
        %th
          Description
        %th
          Due Date

    %tbody
      - @tasks.each do |task|
        %tr
          %td
            - if task.complete
              %u
                %s
                  = link_to task.description, project_task_path(@project, task)
            - else
              %u
                = link_to task.description, project_task_path(@project, task)


          %td
            - if task.due_date
              = task.due_date.strftime("%m/%d/%Y")
            -else
          %td
            .pull-right
              =  link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-info"
              =  link_to "Delete", project_task_path(@project, task), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}
