.container
  .page-header
    .pull-right
      =  link_to "New Task", new_task_path, class: "btn btn-info margin-top-button"

  %h1 Listing Tasks

  %table.table
    %thead
      %tr
        %th
          Description
        %th  
          Due Date

    %tbody
      - @tasks.each do |task|
        %tr
          %td
            - if task.complete
              %u
                %s
                  = link_to task.description, task_path(task)
            - else
              %u
                = link_to task.description, task_path(task)


          %td
            - if task.due_date
              = task.due_date.strftime("%m/%d/%Y")
            -else
          %td
            .pull-right
              =  link_to "Edit", edit_task_path(task), class: "btn btn-info"
              =  link_to "Delete", task_path(task), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}
