<%= form_for @task, html: { class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <div class="col-md-1">
      <%= f.label :description %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-6">
      <%= f.submit class: "btn btn-info"%>
      <%=  link_to "Cancel", tasks_path, class: "btn btn-default"%>
    </div>
  </div>
<% end %>
