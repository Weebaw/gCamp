<div class="container">
  <div class="page-header">
    <div class='pull-right'>
    <%=  link_to "New Task", new_task_path, class: "btn btn-info"%>
    </div>
    <h1>Listing Tasks</h1>
  </div>


  <table class="table">
    <thead>
      <tr>
        <th>
          Description
        </th>
        <th>
          Due Date
        </th>
      </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
      <tr>
        <td>
          <% if task.complete %>
            <u><s><%= link_to task.description, task_path(task) %></s></u>
          <% else %>
            <u><%= link_to task.description, task_path(task) %></u>
          <% end %>
        </td>

        <td>
          <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% end %>
        </td>

        <td>
          <div class='pull-right'>
            <%=  link_to "Edit", edit_task_path(task), class: "btn btn-info"%>
            <%=  link_to "Delete", task_path(task), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}%>
          </div>
          <!-- <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %> -->
        </td>
      </tr>
    </tbody>

    <% end %>
  </table>


</div>
