.container
  =form_for(@project, html: {class: "form-horizontal"}) do |f|
    .form-group
      .col-md-offset-2.col-md-7
        .alert.alert-danger
          -if @project.errors.any?
            .h3
              =pluralize(@project.errors.count, "error")
              ="prohibited this form from being saved:"
            -@project.errors.full_messages.each do |message|
              .ul
                %li
                  =message
    .form-group
      = f.label :name, class: "col-md-2 control-label text-right"
      .col-sm-6
        = f.text_field :name, class: 'form-control', placeholder: 'Project Name'
    .form-group
      .col-sm-offset-2.col-sm-6
        = f.submit class: "btn btn-primary"
        =  link_to "Cancel", projects_path, class: "btn btn-default"
