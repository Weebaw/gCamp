<div class='container'>
  <h1>New User</h1>

<%= form_for @user, html: { class: "form-horizontal"} do |f| %>

<div class="form-group">
  <%= f.label :first_name, class: "col-md-1 control-label" %>
  <div class="col-sm-3">
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name'%>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "col-md-1 control-label" %>
  <div class='col-sm-3'>
    <%= f.text_field :last_name, class: "form-control", placeholder: 'Last Name' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-md-1 control-label" %>
  <div class='col-sm-3'>
    <%= f.email_field :email, class: "form-control", placeholder: 'Email' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-6">
    <%= f.submit class: "btn btn-primary"%>
    <%=  link_to "Cancel", users_path, class: "btn btn-default"%>
    <% unless @user.new_record? %>
    <%=  link_to "Delete", user_path(@user), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}%>
    <% end %>

  </div>
</div>
<% end %>

</div>
