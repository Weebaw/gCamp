.container
  .page-header
    -if current_user == @user || current_user.admin
      =  link_to "Edit", edit_user_path, class: "btn btn-info pull-right"
    %h1
      = @user.first_name
      = @user.last_name

  %dl.dl-horizontal
    %p
      %dt
        %b First Name
      %dd
        = @user.first_name
    %p
      %dt
        %b Last Name
      %dd
        = @user.last_name
    - if current_user == @user || current_user.admin || same_project(current_user, @user)
      %p
        %dt
          %b Email
        %dd
          = mail_to @user.email
        %dt
          %b Pivotal Tracker Token
          -if @user.pivotaltoken
            %dd
              = @user.pivotaltoken[0...4]+"*****************"
          -else
            %dd
