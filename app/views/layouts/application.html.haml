%head
  %title
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .row
        .navbar-header.col-md-12
          %ul.nav.navbar-nav.navbar-right
            -if current_user
              %li= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user.id)
              %li= link_to 'Sign Out', sign_out_path
            -else
              %li= link_to 'Sign Up', sign_up_path
              %li= link_to 'Sign In', sign_in_path

          = link_to "gCamp", root_path, class:"navbar-brand"


.container
  - if flash[:notice]
    .alert.alert-success= flash[:notice]

  - if flash[:error]
    .alert.alert-danger= flash[:error]

= yield
.container
  %footer
    %hr
      -if current_user
        = link_to "About", about_path
        |
        \#{link_to "Terms", terms_path}
        |
        \#{link_to "FAQ", faq_path}
        |
        \#{link_to "Tasks", tasks_path}
        |
        \#{link_to "Users", users_path}
        |
        \#{link_to "Projects", projects_path}
      -else
        = link_to "About", about_path
        |
        \#{link_to "Terms", terms_path}
        |
        \#{link_to "FAQ", faq_path}


      \#{link_to image_tag('gschool_logo.png', class: 'link_image' ), "https://students.gschool.it/cohorts/8/students/273"}
